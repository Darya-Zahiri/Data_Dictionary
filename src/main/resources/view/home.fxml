<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane fx:id="anchor" xmlns:fx="http://javafx.com/fxml" fx:controller="view.Home" stylesheets="@style.css">

   <!-- LEFT: TreeView inside a titled section -->
   <left>
      <VBox spacing="10" alignment="TOP_LEFT">
         <padding>
            <Insets top="15" right="10" bottom="15" left="15"/>
         </padding>
         <TitledPane text="دسته‌بندی‌ها" expanded="true" collapsible="false">
            <TreeView fx:id="treeView" prefWidth="220" />
         </TitledPane>
      </VBox>
   </left>

   <!-- RIGHT: Button actions panel with spacing and emphasis -->
   <right>
      <VBox spacing="12" alignment="TOP_CENTER">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>
         <Label text="عملیات" styleClass="label"/>
         <Button fx:id="addCategory" text="➕ افزودن دسته‌بندی" onAction="#setAddCategory" maxWidth="180"/>
         <Button fx:id="addData" text="📥 افزودن دیتا" onAction="#setAddData" maxWidth="180"/>
         <Button fx:id="seeData" text="📊 مشاهده دیتا" onAction="#setSeeData" maxWidth="180"/>
      </VBox>
   </right>

   <!-- CENTER: Main content/info panel -->
   <center>
      <VBox spacing="15" alignment="TOP_LEFT">
         <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
         </padding>
         <Label text="اطلاعات انتخاب‌شده" styleClass="label"/>
         <TextArea fx:id="info" wrapText="true" editable="false" prefHeight="300" />
      </VBox>
   </center>

</BorderPane>
